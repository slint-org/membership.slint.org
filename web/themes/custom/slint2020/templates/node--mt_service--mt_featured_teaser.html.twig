{#
/**
 * @file
 * SLINT2020's theme implementation to display a Service node in featured teaser view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('slint2020/node-view-mode-featured-teaser') }}
{% set image = content.field_mt_srv_teaser_image %}
{% set pre_content_first = content.field_mt_srv_tags %}
{% set pre_content_second = null %}
{% set rendered_content = content|without('field_mt_srv_teaser_image', 'field_mt_srv_tags') %}
{% set featured_label = true %}
{% set read_more = true %}
{# Displays author's name and picture. "Display author and date information" must be enabled in content type settings. #}
{% set author_info = false %}
{# Displays date widget over image. "Display author and date information" must be enabled in content type settings. #}
{% set date_overlay = false %}
{% set submitted_day = null %}
{% set submitted_month = null %}
{% set submitted_year = null %}
{% include '@slint2020/partials/_mt-featured-teaser.html.twig' %}
