{#
/**
 * @file
 * SLINT2020's theme implementation to display a Showcase node in teaser view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    display_submitted ? 'node--display-submitted',
    'clearfix',
  ]
%}
{{ attach_library('slint2020/node-view-mode-teaser') }}
{{ attach_library('slint2020/node-field') }}
{% set image = content.field_mt_shw_image %}
{% set teaser_pre_content_first = content.field_mt_shw_tags %}
{% set teaser_pre_content_second = null %}
{% set rendered_content = content|without('field_mt_shw_image', 'field_mt_shw_tags') %}
{% set submitted_day = node.createdtime|format_date('custom', 'd') %}
{% set submitted_month = node.createdtime|format_date('custom', 'M, ') %}
{% set submitted_year = node.createdtime|format_date('custom', 'Y') %}
{% include '@slint2020/partials/_mt-teaser.html.twig' %}
