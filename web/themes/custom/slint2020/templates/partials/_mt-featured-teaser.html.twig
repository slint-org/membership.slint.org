{#
/**
 * @file
 * Partial template to display a node in featured teaser tile view mode.
 */
#}
<article{{ attributes.addClass(classes).addClass('mt-style-custom-all region--bright-background p-4') }}>
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="row">
    <div class="col-lg-8">
      {% if image|render or (display_submitted and date_overlay) %}
        <div class="featured-teaser-image">
          {% if image|render %}
            {{ image }}
          {% endif %}
          {% if display_submitted and date_overlay %}
            {{ metadata }}
            <div class="node__submitted-date mt-style-custom-tl mt-style-custom-br region--default-background">
              <div class="day">{{ submitted_day }}</div>
              <div class="month-year">
                {{ submitted_month }}
                {{ submitted_year }}
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
    <div class="col-lg-4">

      {% if featured_label %}
        {% trans %}
          <div class="promoted-label mt-style-custom-all mt-4 mt-lg-0 region--dark-colored-background">Promoted</div>
        {% endtrans %}
      {% endif %}

      {% if pre_content_first|render or pre_content_second|render %}
        <div class="node__meta">
          {% if pre_content_first|render %}
            <div class="node__meta-item">
              {{ pre_content_first }}
            </div>
          {% endif %}
          {% if pre_content_second|render %}
            <div class="node__meta-item">
              {{ pre_content_second }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% if not page %}
        <h2{{ title_attributes.addClass("mt-0 node__title") }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
      {% endif %}
     
      <div{{ content_attributes.addClass('node__content') }}>
        {{ rendered_content }}
      </div>

      {% if display_submitted and author_info %}
        <div class="node__meta">
          {{ author_picture }}
          <span{{ author_attributes.addClass('node__submitted') }}>
            {{ author_name }}
            {% if display_submitted and not date_overlay %}
              {{ metadata }}
            {% endif %}
          </span>
        </div>
      {% endif %}

      {% if read_more %}
        {% trans %}
          <a class="mt-link-stylable" href="{{ url }}">Read more</a>
        {% endtrans %}
      {% endif %}

    </div>
  </div>
</article>
