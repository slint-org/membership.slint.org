{#
/**
 * @file
 * SLINT2020's theme implementation to display a Product node in teaser view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    display_submitted ? 'node--display-submitted',
    'clearfix',
  ]
%}
{{ attach_library('slint2020/node-view-mode-teaser') }}
{{ attach_library('slint2020/node-field') }}
{% set image = content.field_mt_prd_teaser_image %}
{% set teaser_pre_content_first = content.field_mt_prd_tags %}
{% set teaser_pre_content_second = content.field_mt_prd_price %}
{% set rendered_content = content|without('field_mt_prd_teaser_image', 'field_mt_prd_tags', 'field_mt_prd_price') %}
{% set submitted_day = null %}
{% set submitted_month = null %}
{% set submitted_year = null %}
{% include '@slint2020/partials/_mt-teaser.html.twig' %}
