{#
/**
 * @file
 * Groovy+'s theme implementation to display a Post node in featured teaser view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('groovyplus/node-view-mode-featured-teaser') }}
{% set image = content.field_mt_pst_image %}
{% set pre_content_first = node.getCreatedTime|date('j M Y') %}
{% set pre_content_second = content.field_mt_pst_category %}
{% set rendered_content = content|without('field_mt_pst_image', 'field_mt_pst_category') %}
{% set featured_label = true %}
{% set read_more = false %}
{# Displays author's name and picture. "Display author and date information" must be enabled in content type settings. #}
{% set author_info = true %}
{# Displays date widget over image. "Display author and date information" must be enabled in content type settings. #}
{% set date_overlay = false %}
{% set submitted_day = null %}
{% set submitted_month = null %}
{% set submitted_year = null %}
{% include '@groovyplus/partials/_mt-featured-teaser.html.twig' %}
