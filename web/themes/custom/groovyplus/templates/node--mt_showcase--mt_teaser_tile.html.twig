{#
/**
 * @file
 * Groovy+'s theme implementation to display a Showcase node in teaser tile view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('groovyplus/node-view-mode-teaser-tile') }}
{% set image = content.field_mt_shw_image %}
{% set teaser_tile_pre_content = content.field_mt_shw_tags %}
{% set rendered_content = content|without('field_mt_shw_image', 'field_mt_shw_body', 'field_mt_shw_tags') %}
{% set teaser_tile_content = null %}
{% set image_caption = null %}
{% set date_overlay = true %}
{% set submitted_day = node.createdtime|format_date('custom', 'd') %}
{% set submitted_month = node.createdtime|format_date('custom', 'M, ') %}
{% set submitted_year = node.createdtime|format_date('custom', 'Y') %}
{% set read_more = true %}
{% include '@groovyplus/partials/_mt-teaser-tile.html.twig' %}
