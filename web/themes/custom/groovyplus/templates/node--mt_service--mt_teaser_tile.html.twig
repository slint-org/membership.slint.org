{#
/**
 * @file
 * Groovy+'s theme implementation to display a Service node in teaser tile view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('groovyplus/node-view-mode-teaser-tile') }}
{% set image = content.field_mt_srv_teaser_image %}
{% set teaser_tile_pre_content = content.field_mt_srv_tags %}
{% set rendered_content = content|without('field_mt_srv_teaser_image', 'field_mt_srv_tags', 'field_mt_srv_body') %}
{% set teaser_tile_content = null %}
{% set image_caption = null %}
{% set date_overlay = false %}
{% set submitted_day = null %}
{% set submitted_month = null %}
{% set submitted_year = null %}
{% set read_more = true %}
{% include '@groovyplus/partials/_mt-teaser-tile.html.twig' %}
