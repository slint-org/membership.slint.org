{#
/**
 * @file
 * Groovy+'s theme implementation to display a Product node in teaser compact view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('groovyplus/node-view-mode-teaser-compact') }}
{% set image = content.field_mt_prd_image %}
{% set rendered_content = content|without('field_mt_prd_image', 'field_mt_prd_highlight') %}
{% set read_more = true %}
{% set created_date = null %}
{% include '@groovyplus/partials/_mt-teaser-compact.html.twig' %}
